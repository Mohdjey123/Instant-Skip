{
    "manifest_version": 3,
    "name": "Ad Skipper",
    "version": "1.0",
    "description": "Automatically clicks the Skip Ads button.",
    "permissions": ["scripting", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  
